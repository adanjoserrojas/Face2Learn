{
    "name": "Face2Learn",
    "version": "1.0",
    "description": "A Chrome extension that uses AI to generate educational content from images.",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [{
        "matches": ["*://www.youtube.com/*"],
        "js": ["contentscript.js"],
        "css": ["overlay.css"]
    }],
    "web_accessible_resources": [{
        "resources": ["overlay.css"],
        "matches": ["*://www.youtube.com/*"]
    }],
    "permissions": ["scripting", "activeTab", "camera"]
}